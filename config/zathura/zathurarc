set sandbox none
set selection-clipboard clipboard
set font "monospace normal 12"
set statusbar-h-padding 0
set statusbar-v-padding 0
set statusbar-basename 1
set scroll-page-aware 1

map <BackSpace> scroll full-up
map = zoom in

map <C-e> scroll down
map <C-y> scroll up
map F follow
map H scroll full-up
map J zoom out
map K zoom in
map L scroll full-down
map R reload
map f toggle_fullscreen
map g goto top
map i recolor
map p set page-right-to-left
map r rotate

map [fullscreen] <BackSpace> scroll full-up
map [fullscreen] = zoom in

map [fullscreen] <C-e> scroll down
map [fullscreen] <C-y> scroll up
map [fullscreen] F follow
map [fullscreen] H scroll full-up
map [fullscreen] J zoom out
map [fullscreen] K zoom in
map [fullscreen] L scroll full-down
map [fullscreen] R reload
map [fullscreen] d toggle_page_mode
map [fullscreen] f toggle_fullscreen
map [fullscreen] g goto top
map [fullscreen] i recolor
map [fullscreen] p set page-right-to-left
map [fullscreen] r rotate
