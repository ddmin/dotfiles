configuration {
    modi: "drun,window,ssh";
    columns: 3;
    eh: 1;
    fullscreen: false;
    font: "Noto Sans Bold 18";
    show-icons: true;
    icon-theme: "Papirus";
    drun-show-actions: false;
    drun-display-format: "{name}";
    disable-history: true;
    hide-scrollbar: true;
    sidebar-mode: false;
    auto-select: false;
    terminal: "kitty";
    ssh-command: "kitty -- kitty +kitten ssh {host}";
    theme: "~/.config/rofi/theme.rasi";
}
