[
  { "key": "ctrl+t", "command": "workbench.action.terminal.focus" },
  {
    "key": "ctrl+t",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    // Unbind unconditional default
    "key": "ctrl+.",
    "command": "-workbench.action.focusSideBar"
  },
  {
    // to ←
    "key": "ctrl+.",
    "when": "!sideBarFocus",
    "command": "workbench.action.focusSideBar"
  },
  {
    // from →
    "key": "ctrl+.",
    "when": "sideBarFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  }
]